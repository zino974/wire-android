<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="vertical"
              style="?wireBackground"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/t_collection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:clickable="true"
        app:contentInsetStart="@dimen/content__padding_left"
        style="?conversationToolbar"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/tv__collection_toolbar__content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/wire__padding__regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@null"
                android:text="Photos"
                app:font="@string/wire__typeface__bold"
                style="?conversationToolbar"
                />

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/tv__collection_toolbar__name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/wire__padding__regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@null"
                style="?conversationToolbar"
                />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv__collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
